#!/usr/bin/env coffee

FileSystem = require "fs"
Moment     = require "moment"

serialized = FileSystem.readFileSync "storage/index.json", "utf-8"
parsed = JSON.parse(serialized)
output = []

for article in parsed
  if /ART/.test(article.id) is no
    article.id = "ART" + article.id
  output.push article

FileSystem.writeFileSync "storage/index.json", JSON.stringify(output, undefined, 2), "utf-8"
